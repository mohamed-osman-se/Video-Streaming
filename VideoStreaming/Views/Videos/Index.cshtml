@model IEnumerable<VideoStreaming.Models.Video>

@{
    ViewData["Title"] = "Video Library";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 fw-bold text-dark" style="font-size:1.6rem;">
            <i class="bi bi-collection-play text-primary me-2"></i> Video Library
        </h2>
    </div>

    <!-- Success Message -->
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show fw-semibold" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Empty State -->
    @if (!Model.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-collection-play display-4 mb-3"></i>
            <p class="lead fw-semibold">No videos have been uploaded yet.</p>
            <a class="btn btn-lg btn-outline-primary fw-semibold" href="@Url.Action("Upload","Videos")">
                <i class="bi bi-plus-circle me-1"></i> Upload your first video
            </a>
        </div>
    }
    else
    {
        <!-- Video Table -->
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle shadow-sm rounded">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" style="font-size:1rem;">Title</th>
                        <th scope="col" style="font-size:1rem;">Status</th>
                        <th scope="col" style="font-size:1rem;">Created At</th>
                        <th scope="col" class="text-end" style="font-size:1rem;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var v in Model)
                {
                    <tr>
                        <td class="fw-semibold text-dark">@v.Title</td>
                        <td>
                            @switch (v.Status.ToString())
                            {
                                case "Processing":
                                    <span class="badge bg-warning text-dark px-3 py-2"> Processing</span>; break;
                                case "Ready":
                                    <span class="badge bg-success px-3 py-2"> Ready</span>; break;
                                case "Failed":
                                    <span class="badge bg-danger px-3 py-2"> Failed</span>; break;
                                default:
                                    <span class="badge bg-secondary px-3 py-2">@v.Status</span>; break;
                            }
                        </td>
                        <td class="text-muted">@v.CreatedAt.ToLocalTime().ToString("g")</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary fw-semibold" 
                               href="@Url.Action("Details","Videos", new { id = v.Id })">
                                <i class="bi bi-eye me-1"></i> Details
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>
