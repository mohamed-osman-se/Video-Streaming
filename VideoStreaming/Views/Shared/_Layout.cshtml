<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Video Streaming</title>

    <!-- Favicon for browser tab -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VideoStreaming.styles.css" asp-append-version="true" />

    <style>
        /* Custom styles for logo size */
        .navbar-brand img {
            width: 36px;   /* Bigger icon */
            height: 36px;
        }
        .navbar-brand span {
            font-size: 1.4rem; /* Larger text */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <!-- Logo with icon -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/favicon.ico" alt="Logo" class="me-2" />
                    <span class="fw-bold">Video Streaming</span>
                </a>

                <!-- Upload button -->
                <div class="d-flex">
                    <a class="btn btn-primary" asp-controller="Videos" asp-action="Upload">
                        <i class="bi bi-cloud-upload me-1"></i> Upload Video
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center py-3">
        <div class="container">
            &copy; 2025 - Video Streaming
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
